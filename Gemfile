source 'https://rubygems.org'

# DSL para criação de aplicações web em Ruby
gem 'sinatra', '~> 4.1.1'

# Gem responsável pelo websocket
gem 'faye-websocket'

# Alternativa ao faye-websocket
# gem 'sinatra-websocket'


# Processamento de requisições e respostas HTTP
gem 'rack'
gem 'rack-app'
gem 'rackup'

# Servidor web
gem 'puma', '~> 6.0'  # indicada para ambiente de produção
gem 'thin' # indicada para ambiente de desenvolvimento

# Adiciona extensões ao Sinatra
gem 'sinatra-contrib'

# Gerenciamento de sessões de usuários e armazenamento de cache de dados
gem 'redis'

# Controle sobre multiplas conexões simultaneas  e assincronas
gem 'eventmachine'
gem 'sidekiq'

# gem para variaveis de ambiente ".env"
gem 'dotenv'

gem 'faker'



group :test do
  gem 'rspec'
  gem 'rack-test'
end

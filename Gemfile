source 'https://rubygems.org'

# DSL para criação de aplicações web em Ruby
gem 'sinatra', '~> 4.1.1'

# Gem responsável pelo websocket
gem 'faye-websocket'

# Processamento de requisições e respostas HTTP
gem 'rack'
gem 'rackup'

# Servidor web (escolha um)
gem 'puma', '~> 6.0'  # Se preferir Thin, use 'gem "thin"'

# Adiciona extensões ao Sinatra
gem 'sinatra-contrib'

# Gerenciamento de sessões de usuários e armazenamento de cache de dados
gem 'redis'